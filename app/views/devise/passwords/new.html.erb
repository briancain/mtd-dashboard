<% provide(:title, 'Forgot Password?') %>
<div class="container">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-signin' }) do |f| %>
    <h2 class="form-signin-heading">Forgot your password?</h2>
    <%= devise_error_messages! %>

    <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Email Address' %></div><br/>

    <div><%= f.submit "Reset Password", :class => "btn btn-lg btn-primary btn-block" %></div>
  <% end %>

  <center><%= render "devise/shared/links" %></center>
</div>
