<div class="container">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-signin' }) do |f| %>
      <h2 class="form-signin-heading">Please sign in</h2>
      <div><%= f.email_field :email, :autofocus => true , :placeholder => "Email Address", :class => "form-control"%></div>

      <div><%= f.password_field :password, :class => "form-control", :placeholder => "Password" %></div>

      <% if devise_mapping.rememberable? -%>
        <label class="checkbox">
          <div><%= f.check_box :remember_me, :type => "checkbox" %> <%= f.label :remember_me %></div>
        </label>
      <% end -%>

      <div><%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %></div>
    <% end %>

    <center><%= render "devise/shared/links" %></center>
</div>
