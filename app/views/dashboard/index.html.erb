<div class="container">
  <h1 align="center">AngularJS Element Demo</h1>
  <center><a data-toggle="modal" href="#myModal" class="btn btn-info">About</a><br/><br/></center>
  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">AngularJS Demo Element</h4>
        </div>
        <div class="modal-body">
          This demo shows off AngularJS. It has a controller where it stores the 3 default values you see, and uses the view to retrieve and display them.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
  <center>
    <div ng-controller="DashboardCtrl">
      <form class="form-inline" role="form" ng-submit="addEntry()">
        <div class="form-group">
          <input type="text" ng-model="newEntry.name" class="form-control" placeholder="Entry goes here">
        </div>
        <input type="submit" value="Add" class="btn btn-default">
      </form>

      <center>
        <ul class="list-group" id="customli">
          <li class="list-group-item" ng-repeat="entry in entries">
            {{entry.name}}
          </li>
        </ul>
      </center>
    <div>
  </center>

  <center><h1>Editor Config Demo</h1>
  <a data-toggle="modal" href="#myModalEdit" class="btn btn-info">About</a><br/><br/></center>
  <!-- Modal -->
  <div class="modal fade" id="myModalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabelEdit" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Editor Config Demo</h4>
        </div>
        <div class="modal-body">
          This editor shows how a user can edit our DSL to generate a configuration
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

  <div class="row">
    <div class="col-md-6">
      <div id="editor"></div>
    </div>
    <div class="col-md-6">
      <div class="btn-group">
        <button type="button" class="btn btn-success btn-lg dropdown-toggle" data-toggle="dropdown">
          Load Preset <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><a href="#" onclick="insertNewKeyData('goals')">goal</a></li>
          <li><a href="#" onclick="insertNewKeyData('roles')">role</a></li>
          <li><a href="#" onclick="insertNewKeyData('clusters')">cluster</a></li>
        </ul>
      </div>
    </div>
  </div><br/>

  <div class="row">
    <div class="col-md-6">
      <div class="btn-group">
        <button type="submit" class="btn btn-default" disabled="disabled">Open</button>
        <button type="submit" class="btn btn-default" onclick="displayInfo()">Save</button>
        <button type="submit" class="btn btn-default" onclick="doUndo()">Undo</button>
        <button type="submit" class="btn btn-default" onclick="doRedo()">Redo</button>
        <button type="submit" class="btn btn-warning" disabled="disabled">Execute</button><br/><br/>
      </div>
    </div>
  </div>

  <!-- <div id="forcedDir"></div> -->

  <script src="//code.jquery.com/jquery.js"></script>
  <script src="/js/ace.js"></script>
  <script src="/js/mode-yaml.js"></script>
  <script src="/js/ext-searchbox.js"></script>
  <script src="http://d3js.org/d3.v3.min.js"></script>
  <!-- <script src="/js/forced-graph-config.js"></script> -->
  <script>
    var editor = ace.edit("editor"),
        YAMLMode = require("ace/mode/yaml").Mode;

    editor.getSession().setMode(new YAMLMode());
    editor.getSession().setTabSize(2);
    editor.getSession().setUseWrapMode(true);
    editor.getSession().setUseSoftTabs(true);

    var undoRedoManager = editor.getSession().getUndoManager();

    $.get('/tmp/fullstack.yaml', function(data) {
        editor.insert(data);
    });

    $(document).ready(function() {
      move();
    });

    function move() {
      var editor = ace.edit("editor");

      editor.gotoLine(0);
    }

    function insertNewKeyData(data) {
      var msg = "";
      if (data == 'goals') {
        msg = "goals:\n\texampleGoal:\n\t\tname: TemplateName\n\troles:\n\t\t\t- TemplateRole";
      }
      else if (data == 'roles') {
        msg = "roles:\n\texampleRole:\n\t\tname: TemplateName\n\t\tmin: 1\n\t\texports:\n\t\t\thttp: { type: exampleType, protocol: exampleProtocol }\n\t\t\thttps: { type: exampleType, protocol: exampleProtocol }\n\t\timports:\n\t\t\t- exampleImport";
      }
      else if (data == 'clusters') {
        msg = "clusters:\n\texampleCluster:\n\t\tname: ExampleName\n\t\tstrategy: ExampleStrategy\n\t\troles:\n\t\t\t- exampleRole";
      }

      editor.insert(msg);
    }

    function doUndo() {
      if (undoRedoManager.hasUndo()) {
        undoRedoManager.undo();
      }
    }

    function doRedo() {
      if (undoRedoManager.hasRedo()) {
        undoRedoManager.redo();
      }
    }

    function saveInfo(path) {

    }

    function displayInfo() {
      var editor = ace.edit("editor");
          data = editor.getSession().getValue();

      alert(data);
    }

    function aboutEditor() {
      var msg = "This editor shows how a user can edit our DSL to generate a configuration";

      alert(msg);
    }

    function aboutAngular() {
      var msg = "This demo shows off AngularJS. It has a controller where it stores the 3 default values you see, and uses the view to retrieve and display them.";

      alert(msg)
    }
  </script>
</div>
