<% provide(:title, 'Manage') %>
<head>
<link rel="stylesheet" href="/css/app.css">
  <style type="text/css">
    body {
      padding-top: 50px;
    }
    .starter-template {
      padding: 40px 15px;
      text-align: center;
    }

    #customli {
        max-width: 50%;
    }

    #editor {
        // position: absolute;
        width: 500px;
        height: 400px;
    }

    .modal-backdrop.fade.in {
      opacity: 0.5;
      filter: alpha(opacity=50);
    }

  </style>
</head>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">MTD Dashboard</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
        <% if user_signed_in? %>
          <li class="dropdown active">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="/dashboard/index">Manage</a></li>
              <li><a href="/dashboard/config">Config</a></li>
              <li><a href="/dashboard/visualconfig">Visual Config</a></li>
            </ul>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to("Edit Profile", edit_user_registration_path) %></li>
              <li><%= link_to("Hack the Planet", "/dashboard/index") %></li>
            </ul>
          </li>
          <form class="navbar-form navbar-right">
            <div><a class="btn btn-danger" <%= link_to('Logout', destroy_user_session_path, :method=>'delete')%></a></div>
          </form>
        <% else %>
          <form class="navbar-form navbar-right">
            <div><a class="btn btn-primary" href=<%= new_user_registration_path %>>Sign up</a></div>
          </form>
          <form class="navbar-form navbar-right">
            <div><a class="btn btn-success" href=<%= new_user_session_path %>>Login</a></div>
          </form>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div class="container">
  <center><h1>Visual <i>business</i> configuration editor</h1>
  <a data-toggle="modal" href="#myModalVis" class="btn btn-info">About</a><br/><br/></center>
  <!-- Modal -->
  <div class="modal fade" id="myModalVis" tabindex="-1" role="dialog" aria-labelledby="myModalLabelVis" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Visual Editor Config Demo</h4>
        </div>
        <div class="modal-body">
          This demo shows how users can create their system config with vertexes and edges.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

  <div class="row">
    <div class="col-md-2">
      <div class="btn-group-vertical btn-group-lg">
        <button type="button" class="btn btn-default">Action</button>
        <button type="button" class="btn btn-default">Action</button>
        <button type="button" class="btn btn-default">Action</button>
        <button type="button" class="btn btn-default">Action</button>
      </div>
    </div>
    <div class="col-md10">
      <center><div id="nodeconfig"></div></center>
    </div>
  </div>

  <!-- <div id="forcedDir"></div> -->

  <script src="//code.jquery.com/jquery.js"></script>
  <script src="http://d3js.org/d3.v3.min.js"></script>
  <script src="/js/node-config.js"></script>
</div>
