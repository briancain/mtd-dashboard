<% provide(:title, 'Home') %>
<head>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
  <link rel="stylesheet" type="text/css" href="/css/clippy.css" media="all">
  <link rel="stylesheet" type="text/css" href="/css/rt-chart.css">
  <link rel="stylesheet" type="text/css" href="/css/cube-style.css">
  <style type="text/css">
    body {
      padding-top: 50px;
    }

    .starter-template {
      padding: 40px 15px;
      text-align: center;
    }

    .axis path,
    .axis line {
      fill: none;
      stroke: #000;
      shape-rendering: crispEdges;
    }

    .x.axis path {
      display: none;
    }

    .customChartLine {
      fill: none;
      stroke: steelblue;
      stroke-width: 1.5px;
    }

    .legend rectLegend {
      fill:white;
      stroke:black;
      opacity:0.8;
    }
  </style>
</head>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">MTD Dashboard</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="dropdown active">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Home<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="/">Home</a></li>
            <li><a href="/dashboard/network">Network</a></li>
          </ul>
        </li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="/dashboard/index">Manage</a></li>
              <li><a href="/dashboard/config">Config</a></li>
              <li><a href="/dashboard/visualconfig">Visual Config</a></li>
            </ul>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to("Edit Profile", edit_user_registration_path) %></li>
              <li><%= link_to("Hack the Planet", "/dashboard/index") %></li>
            </ul>
          </li>
          <form class="navbar-form navbar-right">
            <div><a class="btn btn-danger" <%= link_to('Logout', destroy_user_session_path, :method=>'delete')%></a></div>
          </form>
        <% else %>
          <form class="navbar-form navbar-right">
            <div><a class="btn btn-primary" href=<%= new_user_registration_path %>>Sign up</a></div>
          </form>
          <form class="navbar-form navbar-right">
            <div><a class="btn btn-success" href=<%= new_user_session_path %>>Login</a></div>
          </form>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div class="container-fluid">
  <% if user_signed_in? %>
    <div class="row-fuild">
      <div class="col-md-8">
        <h2>Service Monitoring Charts</h2>
        <div id="graphs"></div>
        <div id="cubeChart"></div><br/>
      </div>
      <div class="col-md-4">
        <h3>Network Table</h3>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Node</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @nodes.each do |node| %>
                <tr>
                  <td><%= node %></td>
                  <% if node == 'Sidekiq worker application' %>
                    <td><span class="label label-warning">Unknown</span></td>
                  <% elsif node == 'Web application load balancer' %>
                    <td><span class="label label-danger">Service Down</span></td>
                  <% else %>
                    <td><span class="label label-success">Running</span></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        <h3>Real Time Data Bar Chart</h3>
        <h5>MySQL</h5>
        <div id="barChart"></div>
        <h5>Redis</h5>
        <div id="barChart2"></div>
        <h5>Sidekiq</h5>
        <div id="barChart3"></div>
      </div>
    </div>
  <% end %>

  <div class="row-fluid">
    <br/><br/><button id="easterEgg" style="background-color: Transparent;" type="button" class="btn btn-default" onclick="loadClippy()"></button>
  </div>

</div><!-- /.container -->

<script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>
<script src="/js/legend.js"></script>
<script src="/js/charts.js"></script>
<script src="/js/rt-bar-chart.js"></script>
<script src="/js/clippy.min.js"></script>
<script src="/js/clippy-start.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/cubism/1.2.2/cubism.v1.min.js"></script>
<script src="/js/cube-chart.js"></script>

<script>
  cubeChart('#barChart', 'customChartBlue');
  cubeChart('#barChart2', 'customChartOrange');
  cubeChart('#barChart3', 'customChartGreen');
</script>
