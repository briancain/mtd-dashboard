<div class="container">
  <form class="form-signin">
    <h2 class="form-signin-heading">Sign up</h2>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.email_field :email, :autofocus => true, :placeholder => "Email Address", :class => "form-control" %></div>

      <div><%= f.password_field :password, :class => "form-control", :placeholder => "Password" %></div>

      <div><%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation" %></div>

      <div><%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %></div>
    <% end %>

    <center><%= render "users/shared/links" %></center>
  </form>
</div>
