<div class="container">
  <form class="form-signin">
    <h2 class="form-signin-heading">Forgot your password?</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email Address" %></div>

      <br /><div><%= f.submit "Reset Password", :class => "btn btn-lg btn-primary btn-block" %></div>
    <% end %>

    <center><%= render "users/shared/links" %></center>
  </form>
</div>
